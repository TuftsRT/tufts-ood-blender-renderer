batch_connect:
  template: "basic"

script:
  job_name: "Blender_renderer"
  native:
    - "--nodes=<%=bc_num_slots %>"
    - "--gres=gpu:<%=gpu_count %>"
    - "--ntasks=<%=bc_num_slots.to_i  * gpu_count.to_i  %>"
    - "--constraint=l40s"
    - "--partition=gpu"
    - "--mem=<%=num_memory %>G"
    - "--qos=expanded4x"
    - "--cpus-per-task=8"
    - "--gpus-per-task=1"
    - "--time=0<%=bc_num_hours %>:00:00"
    - "--error=output.err"