---
cluster: "pax"

attributes:
  bc_num_hours:
    value: "2" 

  num_cores:
    widget: "select"
    label: "Cores"
    options:
      - ["2", "2"]
      - ["4", "4"]
      - ["8", "8"]
      - ["12", "12"]
    value: "8"

  num_memory:
    widget: "select"
    label: "Memory"
    options:
      - ["4GB", "4"]
      - ["8GB", "8"]
      - ["16GB", "16"]
      - ["32GB", "32"]    
    value: "16"

  partition:
    widget: "select"
    label: "Partition"
    help: "NOTE: jobs submitted to the preempt partition may get automatically killed to allow higher priority jobs to run"
    options:
      - ["preempt"]
      - ["gpu"]
    value: "gpu"

  gpu_type:
    widget: "select"
    label: "GPU type"
    help: "gpu partition has a100, a100-80GB and p100, preempt partition has all listed gpu types."
    options:
      - ["A100 - 40GB", "a100"]
      - ["A100 - 80GB", "a100-80GB"]
      - ["L40S - 48GB", "l40s"]
    value: "l40s"

  gpu_count:
    widget: "select"
    label: "GPU Count"
    help: "Number of GPUs per node to use for this render job."
    options:
      - ["1", "1"]
      - ["2", "2"]
      - ["4", "4"]
    value: "1"




  projectfile:
    label: Blender Project File
    widget: path_selector
    directory: /cluster/tufts
    favorites:
      - /cluster/tufts
      - /cluster/home

  outputdir:
    label: "Render output directory"
    widget: path_selector
    directory: /cluster/home
    show_files: false
    help: "Specifies the output directory for storing your rendered frames. If left unset, it defaults to a output folder next to your selected project file."
    favorites:
      - /cluster/tufts
      - /cluster/home

  start_frame:
    label: "Start at frame number"
    help: "Enter the number of the frame to start at.  First frame is 1."
    value: "1"

form:
  - bc_num_hours
  - num_cores
  - num_memory
  - partition
  - gpu_type 
  - gpu_count
  - bc_num_slots
  - projectfile
  - outputdir
  - start_frame
